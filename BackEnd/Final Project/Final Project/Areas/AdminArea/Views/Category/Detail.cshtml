@model Category
@{
    ViewData["Title"] = "Detail - Category";
}
<div class="container" style="margin-left:260px;">
    <div class="d-flex align-items-center">
        <img style="width:100px;" src="~/assets/images/@Model.ImageUrl">
        <h1>@Model.Name</h1>
    </div>
    <div class="row">
        @if (Model.Products.Count == 0)
        {
            <a class=" btn btn-danger">There is No Product</a>
        }
        else
        {
            @foreach (var item in Model.Products)
            {
                <div class="card mx-3" style="width: 18rem;">
                    <img style="width:70%;" src="~/assets//images/@item.ImageUrl" class="card-img-top p-2" alt="...">
                    <div class="card-body">
                        @if (item.SalePrice == null)
                        {
                            <h5 class="card-title">$ @item.Price</h5>
                        }
                        else
                        {
                            <h5 class="card-title">$ @item.SalePrice</h5>
                        }
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description.Substring(0,50)...</p>
                        <a asp-area="" asp-action="detail" asp-controller="product" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
                    </div>
                </div>
            }
        }
    </div>
</div>