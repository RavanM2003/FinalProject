<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gametronica Admin</title>
    <!-- Custom Css -->
    <link rel="stylesheet" href="~/adminAssests/static/css/style.css">
    <!-- Jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <header>
        <div class="header">
            <div class="side-bar">
                <div class="side-bar-header">
                    <h1>Gametronica</h1>
                </div>
                <div class="pages">
                    <ul>
                        <a asp-action="index" asp-controller="dashboard">
                        <li><i class="fa-solid fa-house"></i> Dashboard</li></a>
                        <a asp-action="index" asp-controller="slider">
                        <li><i class="fa-solid fa-sliders"></i> Sliders</li></a>
                        <a asp-action="index" asp-controller="category">
                        <li><i class="fa-solid fa-list"></i> Categories</li></a>
                        <a asp-action="index" asp-controller="product">
                        <li><i class="fa-solid fa-headphones"></i> Products</li></a>
                        <a asp-action="index" asp-controller="worker">
                        <li><i class="fa-solid fa-users"></i> Workers</li></a>
                        <a asp-action="index" asp-controller="banner">
                        <li><i class="fa-solid fa-newspaper"></i> Banners</li></a>
                        <a asp-action="index" asp-controller="sponsore">
                        <li><i class="fa-solid fa-rectangle-ad"></i> Sponsores</li></a>
                        <a asp-action="index" asp-controller="adminblog">
                        <li><i class="fa-solid fa-blog"></i> Blogs</li></a>
                        <a asp-action="index" asp-controller="question">
                        <li><i class="fa-solid fa-circle-question"></i> Questions</li></a>
                        <a asp-action="index" asp-controller="user">
                        <li><i class="fa-solid fa-users"></i> Users</li></a>
                        <a asp-action="index" asp-controller="setting">
                        <li><i class="fa-solid fa-gears"></i> Setting</li></a>
                    </ul>
                </div>
                <hr>
                <p><i class="fa-solid fa-user"></i> Ravan Mammadov</p>
                <div class="inbox">
                    <a asp-action="chat" asp-controller="chat" asp-area=""><i class="fa-solid fa-inbox"></i> Inbox</a>
                </div>
                <div class="logout">
                    <a asp-area="" asp-action="index" asp-controller="home"><i class="fa-solid fa-right-from-bracket"></i> Home Page</a>
                </div>
            </div>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!-- Chart.Js -->
    <script src="~/adminAssests/vendors/chart.js/Chart.min.js"></script>
    <script src="~/adminAssests/js/chart.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
