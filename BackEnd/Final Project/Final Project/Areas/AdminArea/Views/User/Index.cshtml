@{
    ViewData["Title"] = "user - Index";
    var count = (Model.CurrentPage - 1) * 5 + 1;
}
@model Pagination<AppUser>

<section class="main">
    <div class="header">
        <h1>Users</h1>
    </div>
    <a class="btn btn-outline-success my-2" href="">Add New User</a>
    <div class="container">
        <div class="row">
            <table class="table table-striped table-info">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Profile</th>
                        <th scope="col">Username</th>
                        <th scope="col">Fullname</th>
                        <th scope="col">Number</th>
                        <th scope="col">Country</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col">Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <th scope="row">@count</th>
                            <td>
                                <img width="50" src="~/assets/images/@item.ImageUrl" alt="">
                            </td>
                            <td>@item.UserName</td>
                            <td>@item.FullName</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Country</td>
                            <td>@item.Email</td>
                            <td>
                                @if (item.UserName != User.Identity.Name)
                                {
                                    @if (item.isBlocked)
                                    {
                                        <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-success">Activate</a>
                                        <p class="text-danger">Blocked</p>
                                    }
                                    else
                                    {
                                        <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-danger">Block</a>
                                        <p class="text-success">Active</p>
                                    }
                                }
                                else
                                {
                                    <span class="text-danger">You can not change your status!</span>
                                }
                            </td>
                            <td>
                                @if (item.UserName != User.Identity.Name)
                                {
                                    <a class="btn btn-danger text-white" asp-action="delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                                }
                                <a class="btn btn-info text-white" asp-action="detail" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                                <a class="btn btn-warning text-white" asp-action="update" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>