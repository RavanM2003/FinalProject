@model Workers
@{
    ViewData["Title"] = "Detail - Worker";
}
<a class="btn btn-danger my-2" asp-action="index" style="margin-left:260px;">Back</a>
<div class="card" style="width: 18rem; margin-left:260px;">
    <img src="~/assets/images/@Model.ImageUrl" class="card-img-top p-2" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.FullName</h5>
        <p class="card-text">@Model.Position</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Salary: $@Model.Salary</li>
        <li class="list-group-item">Location: @Model.Location</li>
        <li class="list-group-item">Email: @Model.Email</li>
        <li class="list-group-item">Number: @Model.PhoneNumber</li>
        <li class="list-group-item">Experince: @Model.Experience Year</li>
    </ul>
    <div class="card-body">
        <a href="@Model.InstagramUrl" class="card-link">Instagram</a>
        <a href="@Model.FacebookUrl" class="card-link">Facebook</a>
        <a href="@Model.LinkedinUrl" class="card-link">Linkedin</a>
    </div>
</div>