@{
    ViewData["Title"] = "Blog - Detail - Gametronica";
}
@model BlogVM

<section class="detail-blog">
    <div class="detail">
        <div class="header">
            <div class="title">
                <h3>@Model.Blog.Title</h3>
            </div>
            <div class="sub-description">
                <p>@Model.Blog.Description.Substring(0,240)...</p>
            </div>
        </div>
        <div class="img-recent">
            <div class="image">
                <img src="~/assets/images/@Model.Blog.ImageUrl" alt="">
                <div class="main-description">
                    <div class="header">
                        <div class="author">
                            <img src="~/assets/images/@Model.Blog.AppUser.ImageUrl" alt="">
                            <p>@Model.Blog.AppUser.FullName</p>
                        </div>
                        <div class="create-time">
                            <p>@Model.Blog.WriteTime.ToString("dd MMM yyyy")</p>
                        </div>
                    </div>
                    <div class="main-description-text">
                        <p>@Model.Blog.Description</p>
                    </div>
                </div>
            </div>
            <div class="recent">
                @foreach (var blog in Model.Blogs)
                {
                    <a asp-action="detail" asp-route-id="@blog.Id">
                        <div class="blog">
                            <div class="header">
                                <div class="title">@blog.Title</div>
                                <div class="create-time">@blog.WriteTime.ToString("dd MMM yyyy")</div>
                            </div>
                            <div class="image">
                                <img src="~/assets/images/@blog.ImageUrl" alt="">
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</section>
<section class="sponsore">
    <div class="sponsores">
        <div class="sponsore">
            <img src="/assets/images/Acer.png" alt="">
        </div>
        <div class="sponsore">
            <img src="/assets/images/asus.png" alt="">
        </div>
        <div class="sponsore">
            <img src="/assets/images/Nintendo.png" alt="">
        </div>
        <div class="sponsore">
            <img src="/assets/images/xbox.png" alt="">
        </div>
        <div class="sponsore">
            <img src="/assets/images/playstation.png" alt="">
        </div>
    </div>
</section>