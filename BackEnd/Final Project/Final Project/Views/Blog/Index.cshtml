@model BlogVM
@{
    ViewData["Title"] = "Blog - Gametronica";
}

<section class="blogs">
    <div class="blogs">
        @foreach (var blog in Model.Blogs)
        {
            <div class="blog">
                <div class="blog-image">
                    <div class="image">
                        <img src="~/assets/images/@blog.ImageUrl" alt="">
                    </div>
                </div>
                <div class="blog-text">
                    <div class="header">
                        <div class="category-name">
                            <h3>@blog.Topic</h3>
                        </div>
                        <div class="create-time">
                            <p>@blog.WriteTime.ToString("dd MMM yyyy")</p>
                        </div>
                    </div>
                    <div class="title">
                        <h4>@blog.Title</h4>
                    </div>
                    <div class="description">
                        <p>@blog.Description.Substring(0,240)...</p>
                    </div>
                    <div class="footer">
                        <div class="author">
                            <img src="~/assets/images/@blog.AppUser.ImageUrl" alt="">
                            <p>@blog.AppUser.FullName</p>
                        </div>
                        <div class="link" style="width:100%;">
                            <a asp-action="detail" asp-route-id="@blog.Id">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
