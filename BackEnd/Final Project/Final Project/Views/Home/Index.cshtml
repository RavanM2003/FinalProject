@{
    ViewData["Title"] = "Home - Gametronica - Playing is Easy Now!";
}
@model HomeVM
<section class="slider">
    <div class="slideshow-container">
        @foreach (var slider in Model.Sliders)
        {
            <div class="mySlides fade">
                <img src="~/assets/images/@slider.ImageUrl">
                <div class="text to-left-text">
                    <div class="text-header">
                        <h1>@Html.Raw(slider.Title)</h1>
                        <p>@slider.Description</p>
                    </div>
                    <div class="text-link">
                        <a href="@slider.Link">Show Me More</a>
                    </div>
                </div>
            </div>
        }
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
</section>
<section class="category">
    <div class="header">
        <h1>Categories</h1>
    </div>
    <div class="carousel">
        @foreach (var category in Model.Categories)
        {
            <div class="carousel-item">
                <div class="carousel-box">
                    <a href="./category-products.html"><div class="title">@category.Name</div></a>
                    <img src="~/assets/images/@category.ImageUrl" />
                </div>
            </div>
        }
    </div>
</section>
<section class="products">
    <div class="products">
        <div class="header">
            <h1>Top Products</h1>
            <form action="">
                <input id="searchProduct" type="text" placeholder="Search">
            </form>
        </div>
        <div class="cards">
            @foreach (var product in Model.Product)
            {
                <div class="card">
                    <div class="card-main">
                        <img src="~/assets/images/@product.ImageUrl" alt="">
                        <div class="name">
                            <h4>@product.Name</h4>
                        </div>
                        <div class="card-desc">
                            <div class="prices">
                                @if (product.SalePrice != null)
                                {
                                    <p class="price">$@product.Price</p>
                                    <p class="sale-price">$@product.SalePrice</p>
                                }
                                else
                                {
                                    <p style="font-size: 20px;">No Discount</p>
                                    <p class="sale-price">$@product.Price</p>
                                }
                            </div>
                            <div class="desc">
                                <p class="desc-text">@product.Description.Substring(0,47)...</p>
                            </div>
                            <div class="link">
                                <a class="wish-btn">WISHLIST</a>
                                <a class="cart-btn">ADD TO CART</a>
                                <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id" asp-route-categoryName="@product.Category.Name" class="cart-btn">GO TO DETAIL</a>
                            </div>
                        </div>
                        <div class="link-phone">
                            <a class="wish-btn">WISHLIST</a>
                            <a class="cart-btn">ADD TO CART</a>
                            <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id" asp-route-categoryName="@product.Category.Name" class="cart-btn">GO TO DETAIL</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<section class="banner" style="background-image: url(./assets/images/@Model.Banner.ImageUrl);">
    <div class="banner-text">
        <h1>@Html.Raw(Model.Banner.Title)</h1>
        <a href="">Explore</a>
    </div>
</section>
<section class="team" id="team">
    <div class="team-header">
        <h1 class="header">Our Team</h1>
    </div>
    <div class="workers">
        @foreach (var worker in Model.Workers)
        {
            <div class="worker">
                <div class="worker-image">
                    <img src="~/assets/images/@worker.ImageUrl" alt="">
                </div>
                <div class="worker-name">
                    <h1>@worker.FullName</h1>
                </div>
                <div class="worker-position">
                    <p>@worker.Position</p>
                </div>
                <div class="worker-location">
                    <p>@worker.Location</p>
                </div>
                <div class="worker-number">
                    <p>@worker.PhoneNumber</p>
                </div>
                <div class="worker-contact">
                    <a href="@worker.FacebookUrl"><i class="fa-brands fa-facebook"></i></a>
                    <a href="@worker.InstagramUrl"><i class="fa-brands fa-instagram"></i></a>
                    <a href="@worker.LinkedinUrl"><i class="fa-brands fa-linkedin"></i></a>
                </div>
            </div>
        }
    </div>
</section>
<section class="newsletter">
    <div class="newsletters">
        <div class="text">
            <h1>Sign Up For Newsletters</h1>
            <p>Get E-mail updates about our latest shop and <span>special offers</span></p>
        </div>
        <div class="form">
            <form action="">
                <input type="email" name="" id="">
                <button type="submit">Sign Up</button>
            </form>
        </div>
    </div>
</section>
<section class="sponsore">
    <div class="sponsores">
        @foreach (var sponsore in Model.Sponsores)
        {
            <div class="sponsore">
                <img src="~/assets/images/@sponsore.ImageUrl" alt="">
            </div>
        }
    </div>
</section>